{
  "name": "md2ptx",
  "version": "1.0.0",
  "description": "Converter from Markdown to PreTeXt",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write src __tests__",
    "format-check": "prettier -c src __tests__",
    "lint": "eslint src __tests__",
    "test": "vitest run --coverage"
  },
  "keywords": [
    "markdown",
    "pretext",
    "converter"
  ],
  "author": "Haris Skiadas <cskiadas@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/mdast": "^4.0.4",
    "@types/xast": "^2.0.4",
    "@vitest/coverage-istanbul": "^2.1.4",
    "eslint": "^9.13.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2",
    "unist-util-inspect": "^8.1.0",
    "vitest": "^2.1.4"
  },
  "dependencies": {
    "remark-gfm": "^4.0.0",
    "remark-inline-links": "^7.0.0",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "xast-util-to-xml": "^4.0.0",
    "xastscript": "^4.0.0"
  }
}
